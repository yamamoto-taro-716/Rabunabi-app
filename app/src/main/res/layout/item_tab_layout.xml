<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageViewTab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_setting_selector" />

    <LinearLayout
        android:id="@+id/ll_count_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewTab"
        android:layout_alignRight="@+id/imageViewTab"
        android:background="@drawable/shape_oval_red"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_count_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="09"
            android:textColor="@color/white"
            android:textSize="8sp" />
    </LinearLayout>
</RelativeLayout>