<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10"
                android:visibility="gone">

                <FrameLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--   <View
                           android:layout_width="match_parent"
                           android:layout_height="90dp"
                           android:background="#f7f7f7" />-->

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="@dimen/margin20"
                            android:layout_marginRight="@dimen/margin8"
                            android:layout_marginBottom="@dimen/margin8"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_avatar_default2" />

                        <ImageView
                            android:layout_width="@dimen/width35"
                            android:layout_height="@dimen/width35"
                            android:layout_gravity="right|bottom"
                            android:src="@drawable/ic_icon_camera" />
                    </FrameLayout>
                </FrameLayout>

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_alignParentTop="true"-->
                <!--                    android:layout_marginLeft="@dimen/margin50"-->
                <!--                    android:layout_marginTop="140dp"-->
                <!--                    android:text="性別を選択"-->
                <!--                    android:textColor="@color/color_red_pink"-->
                <!--                    android:textSize="@dimen/textsize_normal" />-->
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/TextProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="6"
                        android:text="性別"
                        android:textSize="@dimen/textsize_normal"
                        android:visibility="gone" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/margin20"
                        android:checkedButton="@id/radioMale"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioMale"
                            android:layout_width="90dp"
                            android:layout_height="38dp"
                            android:layout_marginRight="@dimen/margin20"
                            android:background="@drawable/choose_male_p"
                            android:button="@null"
                            android:textSize="@dimen/textsize_normal" />

                        <RadioButton
                            android:id="@+id/radioFemale"
                            android:layout_width="90dp"
                            android:layout_height="38dp"
                            android:background="@drawable/choose_female_p"
                            android:button="@null"
                            android:textSize="@dimen/textsize_normal" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/txtNickName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row_h"
                    android:layout_marginTop="@dimen/margin10"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/TextProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="6"
                        android:text="@string/nickname"
                        android:textSize="@dimen/textsize_normal"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/edtNickname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_border_no_corner"
                        android:gravity="left|center_vertical"
                        android:hint="@string/enter_nickname"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/color_red_pink"
                        android:textColorHint="#c8c8c8"
                        android:textSize="@dimen/textsize_normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/txtAge"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row_h"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/TextProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:ems="6"
                        android:gravity="center_vertical"
                        android:text="@string/age"
                        android:textSize="@dimen/textsize_normal"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_border_no_corner">

                        <TextView
                            android:id="@+id/edtAge"
                            style="@style/TextProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:hint="@string/age"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textColorHint="#c8c8c8"
                            android:textSize="@dimen/textsize_normal" />

                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin4"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_next_p"
                            android:tint="#636262" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row_h"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home"
                        android:textSize="@dimen/textsize_normal" />

                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/padding10"
                        android:text="東京"
                        android:textColor="@color/color_red_pink"
                        android:textSize="@dimen/textsize_normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin4"
                        android:src="@drawable/ic_dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_province"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row_h"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        style="@style/TextProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="6"
                        android:gravity="center_vertical"
                        android:text="地域"
                        android:textSize="@dimen/textsize_normal"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border_no_corner">

                        <TextView
                            android:id="@+id/textViewArea"
                            style="@style/TextProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:hint="@string/khuvuc"
                            android:padding="@dimen/padding10"
                            android:textColorHint="#c8c8c8"
                            android:textSize="@dimen/textsize_normal" />

                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin4"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_next_p"
                            android:tint="#636262" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearPurpose"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row_h"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="6"
                        android:gravity="center_vertical"
                        android:text="目的"
                        android:textSize="@dimen/textsize_normal"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border_no_corner">

                        <TextView
                            android:id="@+id/textViewPurpose"
                            style="@style/TextProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:padding="@dimen/padding10"
                            android:textSize="@dimen/textsize_normal" />

                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin4"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_next_p"
                            android:tint="#636262" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearMarriage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row_h"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="6"
                        android:gravity="center_vertical"
                        android:text="結婚"
                        android:textSize="@dimen/textsize_normal"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border_no_corner">

                        <TextView
                            android:id="@+id/textViewMarriage"
                            style="@style/TextProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:padding="@dimen/padding10"
                            android:textSize="@dimen/textsize_normal" />

                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin4"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_next_p"
                            android:tint="#636262" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/TextProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:text="@string/introduceOneself"
                android:textSize="@dimen/textsize_normal"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edtIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin10"
                android:background="@drawable/bg_border_white"
                android:gravity="top"
                android:hint="@string/hello"
                android:lines="3"
                android:padding="@dimen/padding10"
                android:textSize="@dimen/textsize_normal"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnSave"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/register_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/padding30"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/padding30"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/padding20" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/pradmob_banner"
        layout="@layout/admob_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</LinearLayout>