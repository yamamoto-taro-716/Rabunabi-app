        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_avatar_default2"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_mess_box">

                <TextView
                    android:id="@+id/edtIntro"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width60"
                    android:layout_gravity="bottom"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:hint="@string/hello"
                    android:maxLines="2"
                    android:padding="@dimen/padding10"
                    android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivSex"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="2dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvPartnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/padding10"
            android:text="Atsushi"
            android:textColor="@color/black"
            android:textSize="@dimen/text_header"
            android:textStyle="bold"
            android:visibility="gone" />

