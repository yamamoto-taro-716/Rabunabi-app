        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/margin30"
            android:layout_marginTop="@dimen/width35"
            android:orientation="vertical"
            android:paddingStart="@dimen/width35">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin10"
                        android:text="地域"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_normal" />

                    <TextView
                        android:id="@+id/tvPartnerPrefecture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_normal"
                        tools:text="東京都" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin10"
                        android:text="目的"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_normal" />

                    <TextView
                        android:id="@+id/tvPartnerPurpose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_normal"
                        tools:text="ヒミツ" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin10"
                        android:text="年齢"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_normal" />

                    <TextView
                        android:id="@+id/tvPartnerAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin10"
                        android:text="20歳"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin10"
                        android:text="結婚"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_normal" />

                    <TextView
                        android:id="@+id/tvPartnerMarried"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin10"
                        android:text="ヒミツ"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_normal" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvPartnerGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女性"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_title_toolbar"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            style="@style/TextProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin30"
            android:layout_marginBottom="@dimen/margin10"
            android:text="@string/intro"
            android:textSize="@dimen/textsize_normal"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnstartChat"
            android:layout_width="260dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/width35"
            android:layout_marginBottom="30dp"
            android:background="@drawable/start_chat_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/padding30"
            android:paddingTop="@dimen/padding10"
            android:paddingRight="@dimen/padding30"
            android:paddingBottom="@dimen/padding10"
            android:textColor="@color/white"
            android:textSize="@dimen/padding20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin10"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnBlock"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin8"
                android:background="@drawable/btn_block"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/padding20" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnReport"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_report"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/padding20" />
        </LinearLayout>
    </LinearLayout>
