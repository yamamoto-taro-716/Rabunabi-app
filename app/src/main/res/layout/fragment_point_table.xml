<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profile"
    android:orientation="vertical"
    tools:context=".view.home.ui.profile.mypoint.MyPointFragment">

    <TextView
        android:id="@+id/_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin37"
        android:background="@drawable/underline"
        android:paddingBottom="12dp"
        android:text="ポイント表"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_title_toolbar"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin37"
        android:text="消化ポイント一覧"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_title_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="top"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:paddingEnd="24dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/coin1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_coin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/buy500btn"
                android:layout_toRightOf="@id/coin1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:text="メッセージを送る"
                    android:textAlignment="textStart"
                    android:textSize="22sp"
                    tools:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy500btn"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sendMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:text="無料"
                    android:textAlignment="textEnd"
                    android:textColor="#FF2525"
                    android:textSize="22sp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:paddingEnd="24dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/coin2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_coin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/buy1000btn"
                android:layout_toRightOf="@id/coin2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:text="画像を送る"
                    android:textAlignment="textStart"
                    android:textSize="22sp"
                    tools:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy1000btn"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sendImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:text="無料"
                    android:textAlignment="textEnd"
                    android:textColor="#FF2525"
                    android:textSize="22sp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/underline"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:paddingEnd="24dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/coin3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_coin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/buy3000btn"
                android:layout_toRightOf="@id/coin3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:text="メッセージを読む"
                    android:textAlignment="textStart"
                    android:textSize="22sp"
                    tools:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy3000btn"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/readMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:text="無料"
                    android:textAlignment="textEnd"
                    android:textColor="#FF2525"
                    android:textSize="22sp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>