<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTimeMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:text="9/20 9:27"
            android:textColor="#202020"
            android:textSize="9sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_new_me"
            android:maxWidth="@dimen/max_width_bubble"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/margin16">

            <TextView
                android:id="@+id/tvContentMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="HelHelloHelloHelloHelloHelloHelloHelloHelloHelloHelloHelloHelloHelloHellolo"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_normal" />

            <ImageView
                android:id="@+id/img_send_from"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>