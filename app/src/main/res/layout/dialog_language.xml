<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin16"
            android:background="@drawable/bg_white_border_corner"
            android:orientation="vertical">

        <TextView
                android:textAllCaps="true"
            android:layout_width="match_parent"
                android:layout_height="@dimen/height_header_dialog"

                android:gravity="center"
                android:text="@string/language"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_huge"/>
        <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/vn_language"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="@dimen/textsize_normal"
                            android:layout_width="match_parent"
                            android:padding="@dimen/padding10"
                            android:layout_height="wrap_content"
                            android:text="Tiếng Việt"/>
                </LinearLayout>
                <View style="@style/BorderBottom"/>
                <LinearLayout
                        android:id="@+id/jp_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="@dimen/textsize_normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding10"
                            android:text="日本語"/>
                </LinearLayout>

                <View style="@style/BorderBottom"/>
                <LinearLayout
                        android:id="@+id/el_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="@dimen/textsize_normal"
                            android:layout_width="match_parent"
                            android:padding="@dimen/padding10"
                            android:layout_height="wrap_content"
                            android:text="English"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_header_dialog"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
            android:layout_height="@dimen/height_header_dialog"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:gravity="right">
        <ImageView
                android:id="@+id/imvClose"
                android:layout_width="@dimen/width_close"
                android:layout_height="@dimen/width_close"
                android:src="@mipmap/ic_cancel"/>
    </RelativeLayout>
</RelativeLayout>
